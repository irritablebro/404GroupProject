<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="2000dp"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</ScrollView>
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="110dp"
        android:layout_marginBottom="568dp"
        android:alpha="0.7"
        android:background="@drawable/top_info_main"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/InfoMain"
            android:layout_width="345dp"
            android:layout_height="93dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:src="@drawable/welcome_home" />

        <ImageView
            android:id="@+id/Ring"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ring_main" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="370dp"
        android:layout_height="165dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:scaleType="fitCenter"
        android:src="@drawable/target_main_pic"
        android:clickable="true" />

    <ImageView
        android:id="@+id/SetTar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="325dp"
        android:clickable="true"
        android:src="@drawable/setting_target_main" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Status"
        android:textStyle="bold"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="20dp"/>

    <ImageView
        android:id="@+id/MainHealth1"
        android:layout_width="450dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="335dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:src="@drawable/health1_main" />

    <ImageView
        android:id="@+id/water_intake_main"
        android:layout_width="240dp"
        android:layout_height="510dp"
        android:layout_marginTop="480dp"
        android:scaleType="fitCenter"
        android:clickable="true"
        android:src="@drawable/water_take_main" />

    <ImageView
        android:id="@+id/sleep_main"
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="170dp"
        android:clickable="true"
        android:src="@drawable/sleep_main" />

    <ImageView
        android:id="@+id/calories_main"
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:src="@drawable/calori_main"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="700dp"
        android:clickable="true"/>

    <ImageView
        android:id="@+id/exercise_main"
        android:layout_width="360dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="850dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:src="@drawable/exercise_main" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health News"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1145dp"/>

    <ImageView
        android:id="@+id/news1_main_pic"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/new1_main"
        android:layout_marginTop="1182dp"/>

    <TextView
        android:id="@+id/news1_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/news1_main"
        android:text="Health In The Contemporary World"
        android:autoLink="all"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1380dp"
        android:clickable="true"/>

</FrameLayout>